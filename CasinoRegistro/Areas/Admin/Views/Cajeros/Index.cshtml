
@{
    ViewData["Title"] = "Lista de Cajeros";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Cajeros</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nuevo Cajero</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblCajeros" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Deuda actual</th>                
                <th align="center">Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/cajero.js"></script>
}
