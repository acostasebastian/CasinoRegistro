
@{
    ViewData["Title"] = "Lista de Secretarias";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Secretarias</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="CreateSecretaria" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nueva Secretaria</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblSecretarias" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>                              
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/secretaria.js"></script>
}
